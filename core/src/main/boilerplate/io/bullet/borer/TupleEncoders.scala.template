    Encoder((w, x) ⇒ w ~ x._1)

  [2..#implicit def forTuple1[[#T1 :Encoder#]]: Encoder[([#T1#])] =
    Encoder((w, x) ⇒ w.writeArrayHeader(1) ~ [#x._1# ~ ])#

  ]
}
